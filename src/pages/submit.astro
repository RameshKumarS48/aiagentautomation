---
import BaseLayout from '../layouts/BaseLayout.astro';

// Get Formspree ID from environment variable
const formspreeId = import.meta.env.PUBLIC_FORMSPREE_ID || 'mkovoonr';
---

<BaseLayout
  title="Submit an AI Agent"
  description="Submit your AI agent or automation tool to be included in our directory."
>
  <section class="pt-28 pb-16">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="font-display text-4xl font-bold text-text-primary mb-4">Submit an Agent</h1>
      <p class="text-text-secondary text-lg mb-8">
        Know an AI agent we're missing? Help us build the most comprehensive directory.
      </p>

      <!-- Success message (hidden by default) -->
      <div id="success-message" class="hidden card bg-green-500/10 border-green-500/20 mb-8">
        <div class="flex items-center gap-3">
          <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <div>
            <h3 class="font-semibold text-green-400">Submission Received!</h3>
            <p class="text-text-secondary text-sm">Thanks for your contribution. We'll review it soon.</p>
          </div>
        </div>
      </div>

      <form id="submit-form" class="space-y-6" action={`https://formspree.io/f/${formspreeId}`} method="POST">
        <input type="hidden" name="_subject" value="New AI Agent Submission" />

        <div>
          <label for="name" class="block text-sm font-medium text-text-primary mb-2">
            Agent Name *
          </label>
          <input type="text"
                 id="name"
                 name="name"
                 required
                 class="w-full px-4 py-3 bg-dark-card border border-dark-border rounded-xl
                        text-text-primary placeholder:text-text-muted
                        focus:outline-none focus:border-accent-blue/50
                        transition-all duration-300"
                 placeholder="e.g., AutoGPT" />
        </div>

        <div>
          <label for="url" class="block text-sm font-medium text-text-primary mb-2">
            Website / GitHub URL *
          </label>
          <input type="url"
                 id="url"
                 name="url"
                 required
                 class="w-full px-4 py-3 bg-dark-card border border-dark-border rounded-xl
                        text-text-primary placeholder:text-text-muted
                        focus:outline-none focus:border-accent-blue/50
                        transition-all duration-300"
                 placeholder="https://github.com/..." />
        </div>

        <div>
          <label for="category" class="block text-sm font-medium text-text-primary mb-2">
            Category *
          </label>
          <select id="category"
                  name="category"
                  required
                  class="w-full px-4 py-3 bg-dark-card border border-dark-border rounded-xl
                         text-text-primary focus:outline-none focus:border-accent-blue/50
                         transition-all duration-300">
            <option value="">Select a category</option>
            <option value="Autonomous Agents">Autonomous Agents</option>
            <option value="Agent Frameworks">Agent Frameworks</option>
            <option value="Multi-Agent Frameworks">Multi-Agent Frameworks</option>
            <option value="Coding Agents">Coding Agents</option>
            <option value="Research Agents">Research Agents</option>
            <option value="Cybersecurity Agents">Cybersecurity Agents</option>
            <option value="Writing Agents">Writing Agents</option>
            <option value="Data Analysis">Data Analysis</option>
            <option value="Customer Support">Customer Support</option>
            <option value="Other">Other</option>
          </select>
        </div>

        <div>
          <label for="description" class="block text-sm font-medium text-text-primary mb-2">
            Brief Description *
          </label>
          <textarea id="description"
                    name="description"
                    required
                    rows="4"
                    class="w-full px-4 py-3 bg-dark-card border border-dark-border rounded-xl
                           text-text-primary placeholder:text-text-muted
                           focus:outline-none focus:border-accent-blue/50
                           transition-all duration-300 resize-none"
                    placeholder="What does this agent do? What problem does it solve?"></textarea>
        </div>

        <div>
          <label for="tech_stack" class="block text-sm font-medium text-text-primary mb-2">
            Tech Stack (optional)
          </label>
          <input type="text"
                 id="tech_stack"
                 name="tech_stack"
                 class="w-full px-4 py-3 bg-dark-card border border-dark-border rounded-xl
                        text-text-primary placeholder:text-text-muted
                        focus:outline-none focus:border-accent-blue/50
                        transition-all duration-300"
                 placeholder="e.g., Python, LangChain, GPT-4" />
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-text-primary mb-2">
            Your Email (optional)
          </label>
          <input type="email"
                 id="email"
                 name="email"
                 class="w-full px-4 py-3 bg-dark-card border border-dark-border rounded-xl
                        text-text-primary placeholder:text-text-muted
                        focus:outline-none focus:border-accent-blue/50
                        transition-all duration-300"
                 placeholder="your@email.com" />
          <p class="text-text-muted text-sm mt-2">
            We'll only use this to follow up if we have questions.
          </p>
        </div>

        <button type="submit" id="submit-btn" class="btn-primary w-full flex items-center justify-center gap-2">
          <span>Submit Agent</span>
          <svg id="submit-spinner" class="hidden w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </button>
      </form>

      <div class="mt-12 p-6 bg-dark-card border border-dark-border rounded-2xl">
        <h2 class="font-display text-lg font-semibold text-text-primary mb-4">
          Submission Guidelines
        </h2>
        <ul class="space-y-2 text-text-secondary text-sm">
          <li class="flex items-start gap-2">
            <span class="text-accent-blue mt-0.5">•</span>
            Agent must be publicly accessible (website, GitHub, or documentation)
          </li>
          <li class="flex items-start gap-2">
            <span class="text-accent-blue mt-0.5">•</span>
            We prioritize agents with clear documentation
          </li>
          <li class="flex items-start gap-2">
            <span class="text-accent-blue mt-0.5">•</span>
            Submissions are reviewed within 7 days
          </li>
          <li class="flex items-start gap-2">
            <span class="text-accent-blue mt-0.5">•</span>
            We may edit descriptions for clarity and consistency
          </li>
        </ul>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  const form = document.getElementById('submit-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn');
  const spinner = document.getElementById('submit-spinner');
  const successMsg = document.getElementById('success-message');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Show loading state
    if (submitBtn) submitBtn.setAttribute('disabled', 'true');
    spinner?.classList.remove('hidden');

    try {
      const response = await fetch(form.action, {
        method: 'POST',
        body: new FormData(form),
        headers: { 'Accept': 'application/json' }
      });

      if (response.ok) {
        // Show success message
        successMsg?.classList.remove('hidden');
        form.reset();
        form.classList.add('hidden');
      } else {
        alert('Submission failed. Please try again.');
      }
    } catch (error) {
      alert('Submission failed. Please try again.');
    } finally {
      if (submitBtn) submitBtn.removeAttribute('disabled');
      spinner?.classList.add('hidden');
    }
  });
</script>
