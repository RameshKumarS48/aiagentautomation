---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const agents = await getCollection('agents');
  return agents.map((agent) => ({
    params: { slug: agent.slug },
    props: { agent },
  }));
}

const { agent } = Astro.props;
const { Content } = await agent.render();
const data = agent.data;

// Clean category name
const cleanCategory = data.category.replace(/\[([^\]]+)\]\([^)]+\)/g, '$1').trim();

// Get initial for logo (safe for emojis)
const initial = Array.from(data.name)[0];
---

<BaseLayout
  title={`${data.name} - AI Agent Documentation`}
  description={data.description}
>
  <article class="pt-28 pb-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">

      <!-- Breadcrumb -->
      <nav class="mb-8">
        <ol class="flex items-center gap-2 text-sm text-text-muted">
          <li><a href="/" class="hover:text-text-primary transition-colors">Home</a></li>
          <li>/</li>
          <li><a href="/agents/" class="hover:text-text-primary transition-colors">Agents</a></li>
          <li>/</li>
          <li class="text-text-secondary">{data.name}</li>
        </ol>
      </nav>

      <!-- Header -->
      <header class="mb-12">
        <div class="flex items-start gap-6">
          <!-- Logo -->
          <div class="w-20 h-20 rounded-2xl bg-gradient-accent flex items-center justify-center
                      text-white font-display font-bold text-3xl flex-shrink-0 shadow-glow">
            {initial}
          </div>

          <div class="flex-1">
            <div class="flex items-center gap-3 mb-2 flex-wrap">
              <h1 class="font-display text-3xl sm:text-4xl font-bold text-text-primary">
                {data.name}
              </h1>
              {data.is_open_source === 'Yes' && (
                <span class="px-3 py-1 text-sm font-medium rounded-full
                             bg-green-500/10 text-green-400 border border-green-500/20">
                  Open Source
                </span>
              )}
            </div>

            <div class="flex items-center gap-4 flex-wrap">
              <span class="px-3 py-1 text-sm rounded-full bg-accent-blue/10 text-accent-blue">
                {cleanCategory}
              </span>
              <span class="text-text-muted text-sm">
                Updated {data.last_updated.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
              </span>
            </div>

            {data.source_url && data.source_url.startsWith('http') && (
              <a href={data.source_url}
                 target="_blank"
                 rel="noopener noreferrer"
                 class="inline-flex items-center gap-2 mt-4 btn-primary">
                Visit Official Site
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            )}
          </div>
        </div>
      </header>

      <!-- Content sections -->
      <div class="space-y-10">

        <!-- Overview -->
        <section class="card">
          <h2 class="font-display text-xl font-semibold text-text-primary mb-4 flex items-center gap-3">
            <span class="w-8 h-8 rounded-lg bg-accent-blue/10 flex items-center justify-center">
              <svg class="w-4 h-4 text-accent-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </span>
            Overview
          </h2>
          <p class="text-text-secondary leading-relaxed">{data.description}</p>
        </section>

        <!-- Problem & Audience -->
        <section class="card">
          <h2 class="font-display text-xl font-semibold text-text-primary mb-4 flex items-center gap-3">
            <span class="w-8 h-8 rounded-lg bg-accent-purple/10 flex items-center justify-center">
              <svg class="w-4 h-4 text-accent-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
              </svg>
            </span>
            Problem It Solves
          </h2>
          <p class="text-text-secondary leading-relaxed mb-4">{data.problem_solved}</p>
          <p class="text-text-secondary">
            <span class="text-text-primary font-medium">Target Audience:</span> {data.target_audience}
          </p>
        </section>

        <!-- Inputs & Outputs -->
        <div class="grid md:grid-cols-2 gap-6">
          <section class="card">
            <h2 class="font-display text-xl font-semibold text-text-primary mb-4 flex items-center gap-3">
              <span class="w-8 h-8 rounded-lg bg-green-500/10 flex items-center justify-center">
                <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                </svg>
              </span>
              Inputs
            </h2>
            <ul class="space-y-2">
              {data.inputs.map((input) => (
                <li class="flex items-start gap-2 text-text-secondary">
                  <span class="text-accent-blue mt-1">•</span>
                  {input}
                </li>
              ))}
            </ul>
          </section>

          <section class="card">
            <h2 class="font-display text-xl font-semibold text-text-primary mb-4 flex items-center gap-3">
              <span class="w-8 h-8 rounded-lg bg-cyan-500/10 flex items-center justify-center">
                <svg class="w-4 h-4 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
              </span>
              Outputs
            </h2>
            <ul class="space-y-2">
              {data.outputs.map((output) => (
                <li class="flex items-start gap-2 text-text-secondary">
                  <span class="text-accent-cyan mt-1">•</span>
                  {output}
                </li>
              ))}
            </ul>
          </section>
        </div>

        <!-- Workflow -->
        <section class="card">
          <h2 class="font-display text-xl font-semibold text-text-primary mb-4 flex items-center gap-3">
            <span class="w-8 h-8 rounded-lg bg-yellow-500/10 flex items-center justify-center">
              <svg class="w-4 h-4 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
              </svg>
            </span>
            Example Workflow
          </h2>
          <ol class="space-y-3">
            {data.workflow_steps.map((step, index) => (
              <li class="flex items-start gap-4 text-text-secondary">
                <span class="w-7 h-7 rounded-full bg-gradient-accent flex items-center justify-center
                             text-white text-sm font-medium flex-shrink-0">
                  {index + 1}
                </span>
                {step}
              </li>
            ))}
          </ol>
        </section>

        <!-- Sample Prompt -->
        {data.sample_prompt && (
          <section class="card">
            <h2 class="font-display text-xl font-semibold text-text-primary mb-4 flex items-center gap-3">
              <span class="w-8 h-8 rounded-lg bg-pink-500/10 flex items-center justify-center">
                <svg class="w-4 h-4 text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                </svg>
              </span>
              Sample System Prompt
            </h2>
            <pre class="bg-dark-bg border border-dark-border rounded-xl p-4 overflow-x-auto">
              <code class="text-sm text-text-secondary whitespace-pre-wrap">{data.sample_prompt}</code>
            </pre>
          </section>
        )}

        <!-- Tools Used -->
        <section class="card">
          <h2 class="font-display text-xl font-semibold text-text-primary mb-4 flex items-center gap-3">
            <span class="w-8 h-8 rounded-lg bg-orange-500/10 flex items-center justify-center">
              <svg class="w-4 h-4 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </span>
            Tools & Technologies
          </h2>
          <div class="flex flex-wrap gap-2">
            {data.tools_used.map((tool) => (
              <span class="px-3 py-1.5 bg-dark-bg border border-dark-border rounded-lg text-sm text-text-secondary">
                {tool}
              </span>
            ))}
          </div>
        </section>

        <!-- Alternatives -->
        <section class="card">
          <h2 class="font-display text-xl font-semibold text-text-primary mb-4 flex items-center gap-3">
            <span class="w-8 h-8 rounded-lg bg-indigo-500/10 flex items-center justify-center">
              <svg class="w-4 h-4 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
              </svg>
            </span>
            Alternatives
          </h2>
          <ul class="space-y-2">
            {data.alternatives.map((alt) => (
              <li class="flex items-center gap-2 text-text-secondary">
                <span class="text-accent-blue">•</span>
                {alt}
              </li>
            ))}
          </ul>
        </section>

        <!-- FAQs -->
        <section class="card">
          <h2 class="font-display text-xl font-semibold text-text-primary mb-6 flex items-center gap-3">
            <span class="w-8 h-8 rounded-lg bg-teal-500/10 flex items-center justify-center">
              <svg class="w-4 h-4 text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </span>
            FAQs
          </h2>
          <dl class="space-y-4">
            <div>
              <dt class="font-medium text-text-primary mb-1">Is this agent open-source?</dt>
              <dd class="text-text-secondary">{data.is_open_source}</dd>
            </div>
            <div>
              <dt class="font-medium text-text-primary mb-1">Can this agent be self-hosted?</dt>
              <dd class="text-text-secondary">{data.can_self_host}</dd>
            </div>
            <div>
              <dt class="font-medium text-text-primary mb-1">What skill level is required?</dt>
              <dd class="text-text-secondary">{data.skill_level}</dd>
            </div>
          </dl>
        </section>

        <!-- Additional content -->
        <div class="prose prose-invert max-w-none">
          <Content />
        </div>

      </div>
    </div>
  </article>
</BaseLayout>
